{
  "info": {
    "name": "FreeCodeVeda API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/health" }
    },
    {
      "name": "Courses - List",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/courses" }
    },
    {
      "name": "Batches - List",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/batches" }
    },
    {
      "name": "Blogs - List",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/blogs" }
    },
    {
      "name": "Blog - Detail",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/blogs/1" }
    },
    {
      "name": "Team - List",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/team" }
    },
    {
      "name": "Enquire - Create",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/enquire",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"mobile\": \"9999999999\",\n  \"email\": \"john@example.com\",\n  \"course\": \"Java Full Stack Development\",\n  \"branch\": \"Pimple Saudagar\"\n}"
        }
      }
    },
    {
      "name": "Register - Create",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Doe\",\n  \"mobile\": \"8888888888\",\n  \"email\": \"jane@example.com\",\n  \"course\": \"Software Testing (Java Selenium)\",\n  \"branch\": \"Erandwane\"\n}"
        }
      }
    },
    {
      "name": "Admin - Enquiries",
      "request": {
        "method": "GET",
        "header": [{ "key": "x-admin-token", "value": "{{adminToken}}" }],
        "url": "{{baseUrl}}/api/enquiries"
      }
    },
    {
      "name": "Admin - Registrations",
      "request": {
        "method": "GET",
        "header": [{ "key": "x-admin-token", "value": "{{adminToken}}" }],
        "url": "{{baseUrl}}/api/registrations"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "adminToken", "value": "" }
  ]
}
